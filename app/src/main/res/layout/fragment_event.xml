<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EventFragment">

    <!-- Map fragment -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventMapFragment"
        >

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <ImageView android:id="@+id/eventGenderIcon"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"/>

            <LinearLayout android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventPersonFullName"
                    tools:text="Person Full Name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventEventType"
                    tools:text="Event Type"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventEventLocationAndYear"
                    tools:text="Location and Year"/>


            </LinearLayout>
    </LinearLayout>

</FrameLayout>